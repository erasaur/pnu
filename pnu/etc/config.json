{
    "gmail": {
        "mailbox": "INBOX",
        "imap": "imap.gmail.com"
    },

    "smtp": {
        "host": "smtp.gmail.com",
        "port": 587
    },

    "user_data_store": {
        "host": "localhost",
        "port": 6379
    },

    "pending_data_store": {
        "host": "localhost",
        "port": 6380
    },

    "pnu": {
        "update_interval": 3.0
    },

    "http": {
        "timeout_seconds": 2.0
    },

    "request_handler": {
        "update_interval": 3.0
    },

    "logging": {
        "location": "./pnu/etc/logging.ini"
    },

    "scan_filter": {
        "update_interval_sec": 60,
        "sync_to_file_interval_sec": 600,
        "spawn_count_threshold": 5,
        "group_scan_radius_km": 1.5,
        "sync_file": "./pnu/etc/spawns.json"
    },

    "scanner": {
        "num_threads": 10,
        "min_sec_before_reauth": 60,
        "max_tries_per_request": 10,
        "sleep_per_try_sec": 20,
        "scan_throttle_sec": 60,
        "delay_between_login_sec": 5,
        "max_vpn_retries_before_switch": 4,
        "delay_between_vpn_retries_sec": 8,
        "restart_vpn_file": "../vpn_config/restart_vpn.sh",
        "switch_vpn_file": "../vpn_config/acquire_new_serv.sh"
    },

    "pgo_api": {
      "linux_signature_lib_file": "./pnu/etc/pgoapi/libencrypt.so",
      "darwin_signature_lib_file": "./pnu/etc/pgoapi/libencrypt-osx-64.so",
      "win_signature_lib_file": "./pnu/etc/pgoapi/encrypt.dll"
    },

    "poke_api": {
        "update_interval_sec": 15,
        "scan_interval_sec": 60,
        "full_scan_interval_sec": 500,
        "sync_from_store_interval_sec": 800,
        "min_queue_size_before_rescan": 20,
        "min_expiration_sec_for_alert": 45
    },

    "geo": {
        "earth_radius_km": 6378.1,
        "group_scan_dist_km": 1.5,
        "group_member_dist_km": 0.1
    }
}
